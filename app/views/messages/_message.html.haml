.main_chat__message__content
  .main_chat__message__content--name
    = message.user.name
    %span
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message__content--message
    - if message.body.present?
      .main_chat__message__content--message--text
        = message.body
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?